<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout>
                <Pattern>%d %p %c{2} [%t] %l %m%n</Pattern>
            </PatternLayout>
        </Console>
        <RollingFile name="File-Log"
                     filePattern="C:\Users\Loreta_Simonyan\Desktop\mentoring2\mentoring2\target/logs/gmailTest-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>%d %p %c{2} [%t] %l %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File-Log"/>
        </Root>
    </Loggers>
</Configuration>
